{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~*": ["./src/*"]
		},
		"typeRoots": ["node_modules/@types"],
		"declaration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["DOM", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": false,
		"target": "es2018"
	},
	"include": ["src/**/*"]
}
